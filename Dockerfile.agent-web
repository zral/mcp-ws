# Dockerfile for Web Agent Interface
FROM python:3.11-slim

# Sett arbeidsmappe
WORKDIR /app

# Installer systemavhengigheter
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Kopier requirements og installer Python avhengigheter
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Installer ekstra web avhengigheter
RUN pip install --no-cache-dir fastapi uvicorn jinja2 python-multipart

# Kopier applikasjonskode
COPY web_agent.py .
COPY simple_agent.py .
COPY mcp_server.py .
COPY conversation_memory.py .
COPY requirements.txt .
COPY templates/ ./templates/

# Opprett ikke-root bruker for sikkerhet og data directory  
RUN mkdir -p /data && \
    useradd -m -u 1000 webapp && \
    chown -R webapp:webapp /app /data
USER webapp

# Eksponér port
EXPOSE 8080

# Sett miljøvariabler
ENV PYTHONPATH="/app"
ENV PYTHONUNBUFFERED=1

# Helse sjekk kommando
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Kommando for å kjøre web agent
CMD ["python", "web_agent.py"]
