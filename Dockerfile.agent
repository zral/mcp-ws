# Dockerfile for Travel Weather Agent
FROM python:3.11-slim

# Sett arbeidsmappe
WORKDIR /app

# Installer systemavhengigheter
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Kopier requirements og installer Python avhengigheter
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Kopier agent og server kode (agent trenger tilgang til server)
# Kopier agent kode og avhengigheter
COPY simple_agent.py .
COPY mcp_server.py .
COPY conversation_memory.py .

# Opprett ikke-root bruker for sikkerhet og data directory
RUN mkdir -p /data && \
    useradd -m -u 1000 agent && \
    chown -R agent:agent /app /data
USER agent

# Sett miljøvariabler
ENV PYTHONPATH="/app"
ENV PYTHONUNBUFFERED=1

# Helse sjekk kommando
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import simple_agent; print('Agent OK')"

# Standard kommando for å kjøre agent
CMD ["python", "simple_agent.py"]
