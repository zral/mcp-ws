# Dockerfile for Travel Weather Agent
FROM python:3.11-slim

# Sett arbeidsmappe
WORKDIR /app

# Installer systemavhengigheter
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Kopier requirements og installer Python avhengigheter
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Kopier agent og server kode (agent trenger tilgang til server)
COPY agent.py .
COPY mcp_server.py .

# Opprett ikke-root bruker for sikkerhet
RUN useradd -m -u 1000 agent && chown -R agent:agent /app
USER agent

# Sett miljøvariabler
ENV PYTHONPATH="/app"
ENV PYTHONUNBUFFERED=1

# Helse sjekk kommando
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import agent; print('Agent OK')"

# Standard kommando for å kjøre agent
CMD ["python", "agent.py"]
